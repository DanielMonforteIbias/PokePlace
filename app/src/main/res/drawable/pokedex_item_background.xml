<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#55FF0000"
                android:centerColor="#5500FF00"
                android:endColor="#550000FF"
                android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <bitmap android:src="@drawable/pokemon_item_background_pattern"/>
    </item>
</layer-list>

