<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PokePlace" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

    </style>
    <style name="PokePlacePopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:background">?attr/colorSurfaceContainer</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>
    <style name="Theme.PokePlace.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryVariant">@color/red_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/pokemonds</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.PokePlace.AppBarOverlay" parent="Theme.PokePlace.NoActionBar" />
</resources>